  <div class="max-w-4xl mt-20 mx-auto bg-white rounded-lg overflow-hidden shadow-lg border border-gray-200">
    <!-- Flex Container for Image and Details -->
    <div class="flex">
      <!-- Image Section -->
      <div class="w-1/2"> 
        <img class="w-full h-64 object-cover" src=<%= home["image"] %> alt="House Image">
      </div>
  
      <!-- Details Section -->
      <div class="w-1/2 p-6">
        <!-- House Name -->
        <div class="text-3xl font-semibold text-gray-800"><%= home.housename %></div>
        
        <!-- House Description -->
        <p class="mt-3 text-gray-600 text-sm">
          <%=home.description%>        
        </p>
  
        <!-- Rating and Price -->
        <div class="flex items-center justify-between mt-4">
          <!-- Price -->
          <div class="text-2xl font-bold text-green-600">Rs.<%= home.price %> / night</div>
  
          <!-- Rating -->
          <div class="flex items-center text-yellow-500">
            <span class="mr-1"><%= home.rating %></span>
            <i class="fas fa-star"></i>
          </div>
        </div>
  
        <!-- Location -->
        <div class="text-sm text-gray-500 mt-2">
          <i class="fas fa-map-marker-alt text-red-500"></i>
          <span><%= home.location %></span>
        </div>
  
        <!-- Add to Favourites Button -->
        <form action="/favourites" method="POST" class="mt-6">
          <input type="hidden" name="id" value="<%= home._id %>">
          <button class="w-full bg-red-500 hover:bg-red-700 text-white py-2 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-400">
            Add to Favourites
          </button>
        </form>
